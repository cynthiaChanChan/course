/**index.wxss**/
page {
    height: 100%;
    width: 100%;
}
.page {
    position: relative;
    text-align: center;
    width: 100%;
    height: 100%;
    padding-top: 180rpx;
    background: bottom /cover url("https://www.korjo.cn/xcx/courseImg/bg.jpg") fixed no-repeat;
}

.logo {
    border-radius: 30rpx;
    width: 32%;
    margin: 0 auto;
}

.appName {
    font-size: 52rpx;
    font-weight: bold;
    color: #fff;
    letter-spacing: 1px;
    line-height: 1.8;
}

.title {
    color: #fff;
    letter-spacing: 1px;
    font-size: 40rpx;
    line-height: 1;
}

.button {
    position: absolute;
    left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    font-size: 31rpx;
    padding: 16rpx 0;
    width: 35%;
    border-radius: 13rpx;
    background-color: rgba(0,0,0,.4);
    bottom: 110rpx;
    color: #fff;
    border: 3rpx solid #fff;
}

.intro {
    width: 100%;
    left: 0;
    position: absolute;
    bottom: 50rpx;
    font-size: 30rpx;
    text-decoration: underline;
}
